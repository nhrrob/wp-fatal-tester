#!/usr/bin/env php
<?php
require __DIR__ . '/../autoload.php'; // points to EA plugin's vendor/autoload.php

use NHRROB\WPFatalTester\FatalTester;

$plugin = $argv[1] ?? basename(getcwd());

$tester = new FatalTester();
$tester->run([
    'plugin' => $plugin,
    'php' => ['8.1', '8.2'],
    'wp' => ['6.5', '6.6']
]);
